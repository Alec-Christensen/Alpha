<div id="addProjectModal" class="modal">
    <div class="modal-content">
        <button class="close-modal" data-close>&times;</button>
        <h2>Add Project</h2>
        <img src="~/images/project-modal-icon.svg" alt="Project Icon" class="modal-icon" />
        <form asp-controller="Projects" asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label>Project Name</label>
                <input name="ProjectName" class="form-input" required />
            </div>
            <div class="form-group">
                <label>Client Name</label>
                <input name="ClientName" class="form-input" required />
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea name="Description" class="form-input" rows="3" required></textarea>
            </div>
            <div class="form-group">
                <label>Start Date</label>
                <input name="StartDate" type="date" class="form-input" required />
            </div>
            <div class="form-group">
                <label>End Date</label>
                <input name="EndDate" type="date" class="form-input" />
            </div>
            <div class="form-group">
                <label>Budget</label>
                <input name="Budget" type="number" step="0.01" class="form-input" />
            </div>
            <div class="form-group">
                <label>Status</label>
                <select name="Status" class="form-input" required>
                    <option value="started">Started</option>
                    <option value="completed">Completed</option>
                </select>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-blue">Add Project</button>
            </div>
        </form>
    </div>
</div>

