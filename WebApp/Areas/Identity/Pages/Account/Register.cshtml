@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<section id="signup">
    <div class="auth-card">
        <div class="card-header">
            <h1>Create Account</h1>
        </div>

        <div class="card-body">
            <form method="post" novalidate>
                <div asp-validation-summary="All" class="text-danger" style="margin-bottom: 1rem;"></div>
                <div class="form-group">
                    <label asp-for="Input.FirstName" class="form-label"></label>
                    <input asp-for="Input.FirstName" class="form-input" placeholder="Enter your first name" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.LastName" class="form-label"></label>
                    <input asp-for="Input.LastName" class="form-input" placeholder="Enter your last name" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-input" placeholder="Your email address" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" class="form-input" placeholder="Enter your password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-input" placeholder="Confirm your password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-checkbox-group">
                    <label class="form-checkbox">
                        <input asp-for="Input.AcceptTerms" class="form-checkbox-input" type="checkbox" />
                        <span class="form-checkbox-box"></span>
                    </label>
                    <label asp-for="Input.AcceptTerms" class="form-label">
                        I accept <a href="#">Terms and Conditions</a>
                    </label>
                    <span asp-validation-for="Input.AcceptTerms" class="text-danger"></span>
                </div>

                <button type="submit" class="btn">Create Account</button>
            </form>
        </div>

        <div class="card-footer">
            Already have an account? <a asp-page="./Login">Login</a>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/register-validation.js"></script>
}

