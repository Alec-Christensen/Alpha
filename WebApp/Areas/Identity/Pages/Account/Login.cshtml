@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<section id="login">
    <div class="card">
        <div class="card-header">
            <h1>Login</h1>
        </div>
        <div class="card-body">
            <form method="post" novalidate>
                <div class="form-group">
                    <label class="form-label">Email</label>
                    <input class="form-input" type="email" placeholder="Enter email address" />
                </div>

                <div class="form-group">
                    <label class="form-label">Password</label>
                    <input class="form-input" type="password" placeholder="Enter password" />
                </div>

                <div class="form-checkbox-group">
                    <label class="form-checkbox">
                        <input id="persistent-checkbox" class="form-checkbox-input" type="checkbox" />
                        <span class="form-checkbox-box"></span>
                    </label>
                    <label for="persistent-checkbox" class="form-label">Remember me</label>
                </div>

                <button type="submit" class="btn">Log In</button>
            </form>
        </div>
        <div class="card-footer">
            Don’t have an account? <a asp-page="./Register">Sign Up</a>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

